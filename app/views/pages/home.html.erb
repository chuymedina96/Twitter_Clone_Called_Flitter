<div class="row">
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-image hide-panel-body">
                <img src="/space.jpg" class="panel-image-preview"></img>
            </div>
            <div class="panel-footer text-center">
                <div class="row">
                    <div class="col-sm-2"><img src="/menbae.jpg" height="50px" width="50px" class="rounded-img home-img"></img></div>
                    <div class="col-sm-10"><h4 style="text-align: center;"><%= current_user.username %></h4></div>
                    <div class="col-sm-12" style="margin-top: 10px;">
                        <div class="col-sm-6" style="font-size: 80%; opacity: .7;">Tweets<br>
                            <h6 style="color: #55acee; font-size: 200%">16</h6>
                        </div>
                        <div class="col-sm-6" style="font-size: 80%; opacity: .7;">Followers<br>
                            <h6 style="color: #55acee; opacity: .7; font-size: 200%"><%= current_user.followers.count %></h6>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
       
        <div class="panel panel-default">
            <div class="panel-body">
            <h5 style="color: grey; font-size: 125%">Trends</h5>
                <a href="">#Trend 1</a><br>
                <span class="color: grey;">31k Posts</span><br><br>
                <a href="">#Trend 2</a><br>
                <span class="color: grey;">33k Posts</span><br><br>
                <a href="">#Trend 3</a><br>
                <span class="color: grey;">34k Posts</span><br><br>
            </div>
        </div>
</div>

<div class="col-xs-6">
    <%= render '/components/post_form' %><br><br>
    <% for @p in @posts %>
    <div class="panel panel-default post-panel">
          <div class="panel-body">
              <div class="col-sm-1">
                  <img src="/menbae.jpg" class="rounded-img" height="50px" width="50px"></img>
              </div>
              <div class="col-sm-11">
                  <p class="post-title"><span class="post-owner"><%= User.find(@p.user.id).username %></span> <span class="post-creation">- <%= @p.created_at.to_formatted_s(:short) %></p>
                  <p class="post-content"><%= @p.content %></p>
              </div>
              <div class="col-sm-12">
                 <p class="post-links">
                <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-heart g-links g-links-heart" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                <a href="">View conversation</a>
                </p>
                
              </div>
          </div>
    </div>
    <% end %>
    <div class="panel panel-default post-panel">
          <div class="panel-body row">
              
              <div class="col-sm-12">
                <center>
                    <img src="/icon.png" height= "25px" width= "25px"></img>
                    <a href="#top"><p class="opacity: .7">Back to top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a>
                </center>
              </div>
          </div>
    </div>
    
</div>
<div class="col-xs-3">
    <div class="panel panel-default">
         <div class="panel-body">
            <p style="opacity: .5; font-size: 90%">About  Help  Blog  Status  Jobs  Trends  Privacy  Cookies  Ads  Info  Brand  Advertise  Business  Media  Developers  Directory  @2016 Flutter</p>
        </div>
    </div>
</div>
</div>
