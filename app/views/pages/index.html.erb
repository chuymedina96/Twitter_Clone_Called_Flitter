<% if !user_signed_in? # if user is not signed in, render this %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            background: linear-gradient(rgba(0,0,0, .7), transparent 90%),
              linear-gradient(0deg, #7A7A47, transparent),
              url('/bg.jpg') no-repeat center center fixed;  /*This sets a background image for the landing page. Eventually want to play a slideshow of images similar to what twitter does or did*/
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            
        }
        h1 {
            color: white;
            font-weight: 800;
            
        }
        .container-index{
            margin-right: 15%;
            margin-left: 15%;
        }
        .text{
            color: white;
            font-size: 20px;
            font-weight: 500;
        }
        .footer-links {
            text-align: center;
            color: white;
            font-weight: 500;
            margin-top: 22%;
            font-size: 75%;
        }
        .log-in {
            float: right;
            margin-top: 7.5%;
            width:300px;
            height: 100px;
        }
        .sign-up {
            float: right;
            width:300px;
            height: 220px;
            color: black;
        }
    </style>
    <div class="container-index row"> 
    <div class="col-sm-6">
       <h1>Welcome to Flutter!<br>
       Beta
       </h1> 
        <p class="text">
            Connect with your pals. Chat with family and friends. <br>
            Share your adventure. Have fun! <br>
            Just like a blog, but with less characters!
        </p>
    </div>
    <div class="col-sm-6">
        <div class="log-in panel">
            <center><p>Log in</p>
        </div>
        <div class="sign-up panel">
             <center><p>Sign up</p>
                <%= form_for(:user, :url => session_path(:user)) do |f| %>
                  <%= f.text_field :email %>
                  <%= f.password_field :password %><br>
                  <%= f.submit 'Sign in' %><br>
                  <%= link_to "Forgot your password?", new_password_path(:user) %>
                <% end %>
            </center>
        </div>
    </div>
    <div class="col-sm-12">
        <p class="footer-links">About  Help  Blog  Status  Jobs  Trends  Privacy  Cookies  Ads  Info  Brand  Advertise  Business  Media  Developers  Directory  @2016 Flutter</p>
    </div>
    </div>
<% else # if user is signed in, render the following %>

<script>document.location = "/home"</script>

<% end %>