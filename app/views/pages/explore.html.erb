<div class="row">
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <p style="font-weight: bold; opacity: .7; font-size: 20px;">Explore</p>
                <p style="opacity: .5; font-size: 90%">This is the Explore page. This is where you can find posts from all users on the network
                and yeah.
                </p>
            </div>
        </div>
       
        <div class="panel panel-default">
            <div class="panel-body">
            <h5 style="color: grey; font-size: 125%">Trends</h5>
                <a href="">#Trend 1</a><br>
                <span class="color: grey;">31k Posts</span><br><br>
                <a href="">#Trend 2</a><br>
                <span class="color: grey;">33k Posts</span><br><br>
                <a href="">#Trend 3</a><br>
                <span class="color: grey;">34k Posts</span><br><br>
            </div>
        </div>
</div>

<div class="col-xs-6">
    <%= render '/components/post_form' %><% if user_signed_in? %><br><% end %><br>
    <% for @p in @posts %>
    <div class="panel panel-default post-panel">
          <div class="panel-body">
              <div class="col-sm-1">
                  <img src="/menbae.jpg" class="rounded-img" height="50px" width="50px"></img>
              </div>
              <div class="col-sm-11">
                  <p class="post-title"><span class="post-owner"><%= User.find(@p.user.id).username %></span> <span class="post-creation">- <%= @p.created_at.to_formatted_s(:short) %></p>
                  <p class="post-content"><%= @p.content %></p>
              </div>
              <div class="col-sm-12">
                 <p class="post-links">
                <span class="glyphicon glyphicon-comment g-links g-links-comment" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-retweet g-links g-links-retweet" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-heart g-links g-links-heart" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                <a href="">View conversation</a>
                </p>
                
              </div>
          </div>
    </div>
    <% end %>
    <div class="panel panel-default post-panel">
          <div class="panel-body row">
              
              <div class="col-sm-12">
                <center>
                    <img src="/icon.png" height= "25px" width= "25px"></img>
                    <a href="#top"><p class="opacity: .7">Back to top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a>
                </center>
              </div>
          </div>
    </div>
    
</div>
<div class="col-xs-3">
    <div class="panel panel-default">
         <div class="panel-body">
                <p style="font-weight: bold; opacity: .7; font-size: 20px;">Who to follow</p>
                <% for @u in @toFollow do %>
                <p style="font-weight: bold; opacity: 0.85;"><a href="/user/<%= @u.username %>"><%= @u.username %></a></p>
                <% end %>
         </div>
    </div>
    <div class="panel panel-default">
         <div class="panel-body">
            <p style="opacity: .5; font-size: 90%">About  Help  Blog  Status  Jobs  Trends  Privacy  Cookies  Ads  Info  Brand  Advertise  Business  Media  Developers  Directory  @2016 Flutter</p>
        </div>
    </div>
    
</div>
</div>
